<header class="login__header">
  <%= link_to image_tag("logo.png", class:"loginHeader__title-img"), "/" %>
</header>
<div class = "login__main">
  <div class = "login__main__panel">
    <div class = "login__main__no-account">
      <p class="list-text1">アカウントをお持ちでない方はこちら</p>
      <%= link_to "新規会員登録", "/", class: "signup__button" %>
    </div>
    <div class = "form-inner">
      <i class="fab fa-google fa-lg btn-black"></i>
        <%= link_to " googleでログイン", "/" , class: "google--btn" %>
      <i class="fab fa-facebook-square fa-lg btn-white1"></i>
        <%= link_to "Facebookでログイン", "/" , class: "facebook--btn" %>
      <i class="fab fa-apple fa-lg btn-white2"></i>
        <%= link_to "appleでログイン", "/" , class: "apple--btn" %>
    </div>
    <div class = "form-group">
      <input type="email" name="email" value="" placeholder="メールアドレス" class="form-group__email">
      <input type="password" name="password" placeholder="パスワード" class="form-group__pass">
      <input type="submit" value="ログイン" class="form-group__btn">
    </div>
  </div>
</div>
<footer class="login-footer">
  <ul class = "login-nuv">
    <li>プライバシーポリシー</li>
    <li>フリマ利用規約</li>
    <li>特定商取引に関する表記</li>
  </ul>
  <%= link_to image_tag("logo-white.png", class:"loginFooter__title-img"), "/" %>
</footer>